generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id         Int       @id @unique @default(autoincrement())
  title      String
  subtitle   String
  content    String
  published  Boolean   @default(false)
  author     User     @relation(fields: [authorId], references: [id])
  authorId   Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model User {
  id    Int    @id @unique @default(autoincrement())
  email String @unique
  name  String
  posts Post[]
}

model Category {
  id    Int    @id @unique @default(autoincrement())
  name  String
  posts Post[]
}

enum Role {
  USER
  ADMIN
}

